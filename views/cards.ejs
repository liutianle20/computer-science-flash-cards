<div class="well editPanel">
  <h2>Add a Card</h2>
  <form
    action="<%= typeof addCardURL !== 'undefined' ? addCardURL : '/add' %>"
    method="post"
    class="cardForm"
  >
    <div class="form-group">
      <% if (typeof tags !== 'undefined' && tags.length > 0) { %> <%
      tags.forEach(function(tag) { %>
      <label
        for="<%= tag.tagName %>"
        class="toggleButton btn btn-default btn-lg"
        ><%= tag.tagName %> &nbsp;
        <input
          type="radio"
          name="type"
          value="<%= tag.id %>"
          id="<%= tag.tagName %>"
        />
      </label>
      <% }); %> <% } %>
    </div>
    <div class="form-group fieldFront">
      <label for="front">Front of Card</label>
      <input type="text" name="front" id="front" class="form-control" />
    </div>
    <div class="form-group fieldBack">
      <label for="back">Back of Card</label>
      <textarea
        name="back"
        class="form-control"
        id="back"
        placeholder="back of card"
        rows="12"
      ></textarea>
    </div>
    <div class="form-group">
      <button type="submit" class="saveButton btn btn-lg btn-primary">
        Save
      </button>
    </div>
  </form>
</div>

<div class="page-header">
  <h2>
    <%= typeof cards !== 'undefined' ? cards.length : 0 %> Card<%= (typeof cards
    !== 'undefined' && cards.length === 1) ? '' : 's' %>
  </h2>
</div>
