<div class="well">
  <h2>Edit Tag #<%= typeof tag !== 'undefined' ? tag.id : '' %></h2>
  <form
    action="<%= typeof updateTagURL !== 'undefined' ? updateTagURL : '/update-tag' %>"
    method="post"
    class="tagForm"
  >
    <div class="form-group">
      <label for="tagName">Tag name</label>
      <input
        type="text"
        name="tagName"
        id="tagName"
        class="form-control"
        value="<%= typeof tag !== 'undefined' ? tag.tagName : '' %>"
      />
    </div>

    <hr />
    <div class="form-group">
      <input
        type="hidden"
        name="tag_id"
        value="<%= typeof tag !== 'undefined' ? tag.id : '' %>"
      />
      <button type="submit" class="saveButton btn btn-lg btn-primary">
        Save
      </button>
    </div>
  </form>
</div>
