
<div class="row">
    <div class="col-xs-12 text-center">
        <div class="btn-group btn-group-lg" role="group" aria-label="card type">
            <% if (typeof tags !== 'undefined' && tags.length > 0) { %>
                <% tags.forEach(function(tag) { %>
                    <a href="<%= typeof memorizeURL !== 'undefined' ? memorizeURL : '/memorize' %>/<%= tag.id %>" class="btn btn-<%= (typeof card_type !== 'undefined' && card_type == tag.id) ? "primary" : "default" %>"><%= tag.tagName %></a>
                <% }); %>
            <% } %>
        </div>
    </div>
</div>

<hr/>

<div class="row memorizePanel">
    <!--
    <div class="col-xs-2">
        <div class="alignContainer">
            <div class="alignMiddle text-right">
                <br/>
                <br/>
                <a href="wewetw"><i class="fa fa-chevron-left fa-5x"></i></a>
            </div>
        </div>
    </div>
    -->
    <div class="col-xs-8 col-xs-offset-2">
        <div class="panel panel-default cardFront">
            <div class="panel-body">
                <div class="alignContainer">
                    <div class="alignMiddle frontText">
                        <h3 class="text-center"><%= typeof card !== 'undefined' ? card.front : '' %></h3>
                    </div>
                </div>
            </div>
        </div>
        <div class="panel panel-primary cardBack">
            <div class="panel-body">
                <div class="alignContainer">
                    <div class="alignMiddle frontText">
                        <% if (typeof card !== 'undefined' && card.type == 1) { %>
                            <% if (typeof short_answer !== 'undefined' && short_answer) { %>
                                <div class="text-center largerText">
                            <% } %>
                                <%- typeof card !== 'undefined' && typeof card.back !== 'undefined' ? card.back.replace(/\n/g, "<br />") : '' %>
                            <% if (typeof short_answer !== 'undefined' && short_answer) { %>
                                </div>
                            <% } %>
                        <% } else if (typeof card !== 'undefined') { %>
                            <pre><code><%= card.back %></code></pre>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--
    <div class="col-xs-2">
        <div class="alignContainer">
            <div class="alignMiddle text-left">
                <br/>
                <br/>
                <a href="ergergerge"><i class="fa fa-chevron-right fa-5x"></i></a>
            </div>
        </div>
    </div>
    -->
</div>

<div class="row">
    <div class="col-xs-12 text-center">
        <a href="javascript:" class="btn btn-primary btn-lg flipCard">
            <i class="fa fa-exchange"></i>
            Flip Card
        </a>
        &nbsp;
        &nbsp;
        <a href="<%= typeof markKnownURL !== 'undefined' ? markKnownURL : '/mark-known' %>/<%= typeof card !== 'undefined' ? card.id : '1' %>/<%= typeof card_type !== 'undefined' ? card_type : '1' %>" class="btn btn-success btn-lg">
            <i class="fa fa-check"></i>
            I Know It
        </a>
        &nbsp;
        &nbsp;
        <a href="<%= typeof memorizeURL !== 'undefined' ? memorizeURL : '/memorize' %>/<%= typeof card_type !== 'undefined' ? card_type : '1' %>" class="btn btn-primary btn-lg">
            Next Card
            <i class="fa fa-arrow-right"></i>
        </a>
        &nbsp;
        &nbsp;
        <a class="btn btn-info btn-lg" id="load-hint" data-card-id="<%= typeof card !== 'undefined' ? card.id : '1' %>">
            <i class="fa fa-lightbulb-o"></i>
            <span id="hint-toggle-text">Get a Hint</span>
        </a>
    </div>
</div>

<hr/>

<div class="row">
    <div class="panel panel-default panel-hint">
        <div class="panel-body">
            <h4>Hint</h4>
            <p id="hint"><%= typeof hint !== 'undefined' ? hint : '' %></p>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xs-12 text-center">
        <br />
        <br />
        <br />
        <a href="<%= typeof bookmarkURL !== 'undefined' ? bookmarkURL : '/bookmark' %>?card_type=3&card_id=<%= typeof card !== 'undefined' ? card.id : '' %>" class="btn btn-default btn-sm">
            <i class="fa fa-bookmark"></i>
            bookmark this card (#<%= typeof card !== 'undefined' ? card.id : '' %>)
        </a>

    </div>
</div>
